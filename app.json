{
  "expo": {
    "name": "CalorieMonster",
    "slug": "CalorieMonster",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "CalorieMonster needs camera access to take photos of your food",
        "NSPhotoLibraryUsageDescription": "CalorieMonster needs photo library access to select photos of your food"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CalorieMonster to access your camera to take photos of your food."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CalorieMonster to access your photos to select food images."
        }
      ],
      "expo-secure-store"
    ]
  }
}
